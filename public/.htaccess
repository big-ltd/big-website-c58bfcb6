
# Redirect all requests to index.html for SPA routing
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Check if the host is invest.big-ltd.com
  RewriteCond %{HTTP_HOST} ^invest\.big-ltd\.com$ [NC]
  # And if the request is not already for /invest
  RewriteCond %{REQUEST_URI} !^/invest [NC]
  # Then rewrite to /invest
  RewriteRule ^(.*)$ /invest [L]
  
  # Standard SPA routing for other paths
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
